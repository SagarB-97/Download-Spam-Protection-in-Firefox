  <body>
    <div class = "maindiv">
      <h1>Delay Page</h1>
      <p>The file downloaded is a small text file of size 184 Bytes.</p>
      <br>
      <p>It is downloaded every 10 seconds</p>

    </div>

    <script>
      $(document).ready(function(){
        var i = 1;
        var intervalId = setInterval(function() {
                          var $a = $('<a />', {
                            'href': '/single_download',
                            'text': "click"
                            }).hide().appendTo("body")[0].click();
                            i = i + 1;

                            if(i>=6){
                              clearInterval(intervalId);
                            }
                        }, 10000);
      });
    </script>
